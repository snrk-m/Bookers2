<div class="container px-5 px-sm-0">
<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
       <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",class: "form-control name"%>

       <label for="inputImage">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像",class: "form-control-file user_image"%>

       <label for="inputName">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"紹介",class: "form-control name"%>

    <%= f.submit nil, class: 'btn btn-primary' %>
    <% end %>